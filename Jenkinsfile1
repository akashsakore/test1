pipeline {
  agent {
    label 'jenkins-node-1'
  }
  tools {
    maven 'maven'
    jdk 'java17'
  }
  triggers {
    pollSCM('')
  }
  stages {
    stage('checkout scm') {
      steps {
        git branch: 'main', credentialsId: 'github', url: 'https://github.com/akashsakore/test1.git'
      }
    }
    stage('build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage('test') {
      steps {
        sh 'mvn test'
      }
    }
    stage('sonar-qube') {
      steps {
        script {
          withSonarQubeEnv(credentialsId: 'jenkins-sonarqube-token') {
            sh 'mvn sonar:sonar'
          }
        }
      }
    }
    stage('quality gate') {
      steps {
        script {
          waitForQualityGate abortPipeline: false, credentialsId: 'jenkins-sonarqube-token'
        }
      }
    }
  }
}
